# Amazon Linux AArch64 build environment with glibc 2.34
# Base image from Docker Hub (amazonlinux:2023 has glibc 2.34)
FROM amazonlinux:2023

# Install build dependencies
RUN yum update -y && \
    yum groupinstall -y "Development Tools" && \
    yum install -y \
    autoconf \
    automake \
    libtool \
    texinfo \
    gcc \
    make \
    tar \
    gzip \
    which \
    && yum clean all

WORKDIR /work

CMD [ "sh" ]

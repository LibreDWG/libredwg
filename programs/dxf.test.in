check_acdb_dxfname() {
    if [ -f "$dwg" ] && [ -f "$dxf" ]; then
        $TESTPROG "./dwg2dxf${EXEEXT}" -y -v0 -o "$tgt" "$dwg" 2>/dev/null >/dev/null
        expect="$(grep -c "^$dxfname" "$dxf")"
        if [ -n "$1" ]; then expect="$1"; fi
        got=$(grep -c "^$dxfname" "$tgt")
        if [ "$got" = "$expect" ]
        then
            echo "$tgt $dxfname ok"
        else
            echo "$tgt $dxfname fail: got $got != expect $expect"
            i=$((i+1))
            grep -2 "^$dxfname" "$tgt" >"$log"
        fi
    fi
}


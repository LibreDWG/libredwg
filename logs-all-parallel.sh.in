#!/bin/sh
# create logs for all DWGs with GNU parallel (fast)
# shellcheck disable=SC1001,SC1083
srcdir="@srcdir@"
abs_builddir="@abs_builddir@"

make -s -j4

echo test/test-data
@PARALLEL@ @TIMEOUT_10@ ./libtool --mode=execute programs/dwgread -v4 {} \2\>{/.}.log ::: "$srcdir"/test/test-data/*.dwg

echo test/test-data/
cd "$srcdir/test/test-data" || exit
@PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v4 {} \2\>$abs_builddir/{/.}_{//}.log ::: */*.dwg
cd "$abs_builddir" || exit

if test -d "$srcdir/test/test-big"; then
    echo test/test-big
    cd "$srcdir/test/test-big" || exit
    @PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v3 {} \2\>$abs_builddir/{/.}_{//}.log ::: */*.dwg
    cd "$abs_builddir" || exit
fi

if test -d "$srcdir/test/test-old"; then
    echo test/test-old
    cd "$srcdir/test/test-old" || exit
    for d in r* 20*; do
        cd "$d" || exit
        @PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v4 {} \2\>$abs_builddir/{/.}_{//}_"$d".log ::: */*.dwg
        cd .. || exit
    done
    cd "$abs_builddir" || exit
fi

if test -d "$srcdir/test/issues"; then
    echo test/issues
    cd "$srcdir/test/issues" || exit
    for d in *; do
        test -d "$d" || continue
        cd "$d" || continue
        @PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v4 {} \2\>$abs_builddir/{/.}_{//}_"$d".log ::: $(find . -iname \*.dwg)
        cd .. || exit
    done
    cd "$abs_builddir" || exit
fi

if test -d "$srcdir/test/ossfuzz"; then
    echo test/ossfuzz
    cd "$srcdir/test/ossfuzz" || exit
    @PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v4 {} \2\>$abs_builddir/{/.}_{//}_indwg.log ::: indwg/cluster*
    @PARALLEL@ @TIMEOUT_30@ "$abs_builddir/libtool" --mode=execute "$abs_builddir/programs/dwgread" -v4 {} \2\>$abs_builddir/{/.}_{//}_indwg11.log ::: indwg11/cluster*
    cd "$abs_builddir" || exit
fi
